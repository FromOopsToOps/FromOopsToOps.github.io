---
import { siteConfig } from '../config.ts';
import { Icon } from 'astro-icon/components';
import { testimonialsData } from '../content/testimonials';

const companyIconMap = {
  Stripe: 'simple-icons:stripe',
  Shopify: 'simple-icons:shopify',
  Notion: 'simple-icons:notion',
  HubSpot: 'simple-icons:hubspot',
  Intercom: 'simple-icons:intercom',
  Linear: 'simple-icons:linear',
};
---

<section class="relative bg-[#070A0F] px-4 py-20 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="scroll-fade-up mx-auto mb-16 max-w-3xl text-center">
      <h2 class="text-white mb-4 text-4xl font-bold sm:text-5xl">
        {siteConfig.testimonials.title}
      </h2>
      <p class="text-white/80 text-xl">
        {siteConfig.testimonials.subtitle}
      </p>
    </div>

    <div class="mb-20 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        testimonialsData.map((testimonial, index) => (
          <div
            class={`scroll-fade-up border-[color:var(--color-vault-neon)] bg-[#0B1020] rounded-xl border-l-4 p-8 shadow-lg stagger-${(index % 9) + 1}`}
          >
            <div class="mb-4 flex">
              {Array.from({ length: testimonial.rating }).map(() => (
                <Icon
                  name="heroicons:star-solid"
                  class="text-white h-5 w-5"
                />
              ))}
            </div>
            <p class="text-white/80 mb-6 leading-relaxed">
              "{testimonial.quote}"
            </p>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="bg-mono-black mr-4 flex h-12 w-12 items-center justify-center rounded-full font-semibold text-white">
                  {testimonial.initials}
                </div>
                <div>
                  <div class="text-white font-semibold">
                    {testimonial.author}
                  </div>
                  <div class="text-white/60 text-sm">{testimonial.role}</div>
                </div>
              </div>
              <Icon
                name={companyIconMap[testimonial.company]}
                class="text-white h-6 w-6 opacity-60"
              />
            </div>
          </div>
        ))
      }
    </div>

    <div class="scroll-fade-up">
      <div class="bg-[#0B1020] rounded-2xl p-12">
        <p
          class="text-white/60 mb-10 text-center text-sm tracking-wide uppercase"
        >
          Trusted by Leading Companies
        </p>
        <div
          class="mx-auto grid max-w-6xl grid-cols-3 items-center gap-12 sm:grid-cols-4 md:grid-cols-6"
        >
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon name="simple-icons:slack" class="text-white h-12 w-12" />
            <span class="text-white/60 text-xs font-medium">Slack</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:notion"
              class="text-white h-12 w-12"
            />
            <span class="text-white/60 text-xs font-medium">Notion</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon name="simple-icons:asana" class="text-white h-12 w-12" />
            <span class="text-white/60 text-xs font-medium">Asana</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:stripe"
              class="text-white h-12 w-12"
            />
            <span class="text-white/60 text-xs font-medium">Stripe</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:shopify"
              class="text-white h-12 w-12"
            />
            <span class="text-white/60 text-xs font-medium">Shopify</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:hubspot"
              class="text-white h-12 w-12"
            />
            <span class="text-white/60 text-xs font-medium">HubSpot</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:linear"
              class="text-white h-12 w-12"
            />
            <span class="text-white/60 text-xs font-medium">Linear</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:intercom"
              class="text-white h-12 w-12"
            />
            <span class="text-white/60 text-xs font-medium">Intercom</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon name="simple-icons:figma" class="text-white h-12 w-12" />
            <span class="text-white/60 text-xs font-medium">Figma</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:vercel"
              class="text-white h-12 w-12"
            />
            <span class="text-white/60 text-xs font-medium">Vercel</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:github"
              class="text-white h-12 w-12"
            />
            <span class="text-white/60 text-xs font-medium">GitHub</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:dropbox"
              class="text-white h-12 w-12"
            />
            <span class="text-white/60 text-xs font-medium">Dropbox</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
