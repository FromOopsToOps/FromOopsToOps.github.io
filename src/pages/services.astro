---
import '../styles/globals.css';
import { siteConfig } from '../config.ts';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Services — Odin’s Vault</title>
    <meta name="description" content={siteConfig.site.description} />
    {import.meta.env.PUBLIC_GA_ID && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GA_ID}`}></script>
        <script>
          {`window.dataLayer = window.dataLayer || []; function gtag(){dataLayer.push(arguments);} gtag('js', new Date()); gtag('config', '${import.meta.env.PUBLIC_GA_ID}');`}
        </script>
      </>
    )}
  </head>
  <body>
    <Navigation />
    <main class="pt-24">
      <section class="mono-mesh to-mono-lighter relative bg-gradient-to-b from-white px-4 pt-16 pb-14 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-7xl">
          <div class="mx-auto max-w-4xl">
            <h1 class="text-mono-black mb-4 text-4xl font-bold tracking-tight sm:text-6xl">Services</h1>
            <p class="text-mono-dark text-xl leading-relaxed">Landing pages, institutional sites, and MVP web apps. Productized offers with room for custom work.</p>
          </div>
        </div>
      </section>

      <section class="bg-mono-lighter px-4 py-16 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-7xl">
          
<div class="grid grid-cols-1 gap-8 md:grid-cols-3">
  {siteConfig.pricing.plans.map((plan) => (
    <div class="border-mono-lighter rounded-xl border bg-white p-8 shadow-lg">
      <h2 class="text-mono-black mb-2 text-2xl font-bold">{plan.name}</h2>
      <div class="text-mono-gray mb-4 text-sm">{plan.description}</div>
      <div class="text-mono-black mb-6 text-3xl font-bold">{plan.price}</div>
      <ul class="mb-8 space-y-3 text-sm">
        {plan.features.map((f) => (
          <li class="text-mono-dark flex items-start gap-3">
            <span class="text-mono-black mt-0.5">•</span><span>{f}</span>
          </li>
        ))}
      </ul>
      <a href={plan.cta.href} class="bg-mono-black block rounded-xl px-6 py-3 text-center font-semibold text-white shadow-lg">{plan.cta.text}</a>
    </div>
  ))}
</div>

<div class="border-mono-lighter mt-10 rounded-xl border bg-white p-8 shadow-lg">
  <h3 class="text-mono-black mb-2 text-2xl font-bold">Custom products</h3>
  <p class="text-mono-dark leading-relaxed">
    Interactive experiences, niche tooling, integrations, automation — the “treasure” work.
    Most agencies say “too complicated”. We ask: what’s the simplest version that wins?
  </p>
  <div class="mt-6 flex flex-col gap-3 sm:flex-row">
    <a href={siteConfig.contact.calendlyUrl} target="_blank" rel="noreferrer" class="bg-mono-black rounded-xl px-6 py-3 text-center font-semibold text-white shadow-lg">Book a quick chat</a>
    <a href={siteConfig.contact.whatsappUrl} target="_blank" rel="noreferrer" class="border-mono-black rounded-xl border-2 bg-white px-6 py-3 text-center font-semibold text-mono-black">WhatsApp</a>
  </div>
</div>

        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
