---
import '../styles/globals.css';
import { siteConfig } from '../config.ts';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Proof — Odin’s Vault</title>
    <meta name="description" content={siteConfig.site.description} />
    {import.meta.env.PUBLIC_GA_ID && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GA_ID}`}></script>
        <script>
          {`window.dataLayer = window.dataLayer || []; function gtag(){dataLayer.push(arguments);} gtag('js', new Date()); gtag('config', '${import.meta.env.PUBLIC_GA_ID}');`}
        </script>
      </>
    )}
  </head>
  <body>
    <Navigation />
    <main class="pt-24">
      <section class="mono-mesh to-mono-lighter relative bg-gradient-to-b from-white px-4 pt-16 pb-14 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-7xl">
          <div class="mx-auto max-w-4xl">
            <h1 class="text-mono-black mb-4 text-4xl font-bold tracking-tight sm:text-6xl">Proof</h1>
            <p class="text-mono-dark text-xl leading-relaxed">Social proof, screenshots, and case studies (placeholder).</p>
          </div>
        </div>
      </section>

      <section class="bg-mono-lighter px-4 py-16 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-7xl">
          
<div class="border-mono-lighter rounded-xl border bg-white p-8 shadow-lg">
  <h2 class="text-mono-black mb-4 text-2xl font-bold">Testimonials & screenshots</h2>
  <p class="text-mono-dark leading-relaxed">
    Placeholder page. You’ll paste testimonials, screenshots, and short case studies here.
  </p>
  <ul class="text-mono-dark mt-6 list-disc space-y-2 pl-6">
    <li>3–6 screenshots (before/after if possible)</li>
    <li>2–5 short testimonials (1–2 lines)</li>
    <li>Links to live projects (when public)</li>
    <li>Metrics (when available): time saved, conversion, revenue impact</li>
  </ul>
</div>

        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
